<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:padding="5dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/scustomermain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:paddingRight="5sp"
            android:hint="new text"
            android:textColor="#000000" />

        <TextView android:id="@+id/snamemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:paddingRight="2sp"
            android:hint="new text"
            android:textColor="#757272" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/emailmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:paddingRight="2sp"
            android:hint="email"
            android:textColor="#757272"/>

        <TextView android:id="@+id/scomma1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:paddingRight="2sp"
            android:text=","
            android:textColor="#757272" />

        <TextView android:id="@+id/sphonenomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:hint="Phone no"
            android:textColor="#757272" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sstate"
            android:gravity="right">

            <TextView android:id="@+id/scommentmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Small"
                android:hint="comment"
                android:layout_gravity="left"
                android:textColor="#757272"
                android:layout_weight=".2" />

            <TextView android:id="@+id/creditamountmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Small"
                android:hint="amount"
                android:paddingLeft="5sp"
                android:layout_gravity="right"
                android:textColor="#757272" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>